datasource db {
  provider = "postgresql"
}

generator client {
  provider        = "prisma-client"
  output          = "./generated/prisma"
  previewFeatures = ["typedSql"]
}

enum CookbookVisibility {
  PUBLIC
  PRIVATE
  UNLISTED
}

model User {
  id                        Int       @id @default(autoincrement())
  username                  String    @unique @db.VarChar(128)
  email                     String    @unique @db.VarChar(255)
  passwordHash              String?   @map("password_hash") @db.VarChar(110)
  authType                  String    @default("local") @map("auth_type") @db.VarChar(50)
  role                      String    @default("user") @db.VarChar(50)
  status                    String    @default("active") @db.VarChar(50)
  avatarUrl                 String?   @map("avatar_url") @db.VarChar(255)
  emailVerified             Boolean   @default(false) @map("email_verified")
  emailVerificationToken    String?   @map("email_verification_token") @db.VarChar(36)
  passwordResetToken        String?   @map("password_reset_token") @db.VarChar(36)
  passwordResetTokenExpires DateTime? @map("password_reset_token_expires") @db.Timestamp
  deletedAt                 DateTime? @map("deleted_at") @db.Timestamp(3)
  deletionScheduledFor      DateTime? @map("deletion_scheduled_for") @db.Timestamp(3)
  createdAt                 DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt                 DateTime  @updatedAt @map("updated_at") @db.Timestamp(3)
  lastVisitedAt             DateTime? @map("last_visited_at") @db.Timestamp(3)
  lastLogin                 DateTime? @map("last_login") @db.Timestamp(3)
  lastPasswordReset         DateTime? @map("last_password_reset") @db.Timestamp(3)

  /// Relations
  recipes                Recipe[]                 @relation("AuthoredRecipes")
  visitedRecipes         UserVisitedRecipe[]
  ratings                Rating[]
  shoppingList           ShoppingListIngredient[]
  flags                  RecipeFlag[]
  preferences            UserPreference?
  cookieConsent          CookieConsent[]
  termsAcceptance        TermsAcceptance[]
  emailChangeRequest     EmailChangeRequest?
  cookbooks              Cookbook[]
  bookmarks              CookbookBookmark[]
  accountDeletionRequest AccountDeletionRequest[]

  /// Indexes
  @@index([username])
  @@index([email])
  @@index([emailVerificationToken])
  @@index([passwordResetToken])
  @@index([status])
  @@index([deletionScheduledFor])
  @@map("users")
}

model CookieConsent {
  id            Int       @id @default(autoincrement())
  userId        Int       @map("user_id")
  consent       Boolean   @default(false)
  accepted      String[]  @map("accepted") @db.VarChar(255)
  version       String    @default("2025-09-15") @map("version") @db.VarChar(255)
  userIpAddress String?   @map("user_ip_address") @db.VarChar(255)
  userAgent     String?   @map("user_agent") @db.VarChar(255)
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  revokedAt     DateTime? @map("revoked_at") @db.Timestamp(3)
  updatedAt     DateTime  @updatedAt @map("updated_at") @db.Timestamp(3)
  proofHash     String    @map("proof_hash") @db.VarChar(255)

  /// Relations
  user User @relation(fields: [userId], references: [id])

  /// Indexes
  @@index([id, userId])
  @@map("cookie_consents")
}

model TermsAcceptance {
  id            Int       @id @default(autoincrement())
  userId        Int       @map("user_id")
  version       String    @default("2025-10-07") @map("version") @db.VarChar(255)
  userIpAddress String?   @map("user_ip_address") @db.VarChar(255)
  userAgent     String?   @map("user_agent") @db.VarChar(255)
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  revokedAt     DateTime? @map("revoked_at") @db.Timestamp(3)
  updatedAt     DateTime  @updatedAt @map("updated_at") @db.Timestamp(3)
  proofHash     String    @map("proof_hash") @db.VarChar(255)

  /// Relations
  user User @relation(fields: [userId], references: [id])

  /// Indexes
  @@index([id, userId])
  @@map("terms_acceptances")
}

model UserPreference {
  userId    Int      @id @map("user_id")
  settings  Json     @default("{}")
  updatedAt DateTime @updatedAt @map("updated_at")

  /// Relations
  user User @relation(fields: [userId], references: [id])

  /// Indexes
  @@index([userId])
  @@map("user_preferences")
}

model EmailChangeRequest {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  newEmail  String   @unique
  token     String   @unique @db.VarChar(36)
  expiresAt DateTime
  createdAt DateTime @default(now())

  /// Relations
  user User @relation(fields: [userId], references: [id])

  @@index([token, expiresAt])
  @@map("email_change_requests")
}

model AccountDeletionRequest {
  id            Int       @id @default(autoincrement())
  userId        Int       @map("user_id")
  requestedAt   DateTime  @default(now()) @map("requested_at") @db.Timestamp(3)
  completedAt   DateTime? @map("completed_at") @db.Timestamp(3)
  cancelledAt   DateTime? @map("cancelled_at") @db.Timestamp(3)
  ipAddress     String?   @map("ip_address") @db.VarChar(45)
  userAgent     String?   @map("user_agent") @db.VarChar(512)
  reason        String?   @db.Text
  proofHash     String    @map("proof_hash") @db.VarChar(255)
  userEmail     String    @map("user_email") @db.VarChar(255)
  userName      String    @map("user_name") @db.VarChar(128)

  /// Relations
  user User @relation(fields: [userId], references: [id])

  /// Indexes
  @@index([userId])
  @@index([requestedAt])
  @@map("account_deletion_requests")
}

model Recipe {
  id          Int      @id @default(autoincrement())
  displayId   String   @unique @map("display_id") @db.VarChar(36)
  authorId    Int      @map("author_id")
  language    String   @db.VarChar(2)
  title       String   @db.VarChar(255)
  notes       String?  @map("notes") @db.Text
  time        Int?     @map("time")
  portionSize Int?     @map("portion_size")
  imageUrl    String?  @map("image_url") @db.VarChar(255)
  rating      Decimal? @db.Decimal(2, 1)
  timesRated  Int      @default(0) @map("times_rated")
  timesViewed Int      @default(0) @map("times_viewed")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamp(3)

  /// Relations
  author         User                     @relation("AuthoredRecipes", fields: [authorId], references: [id])
  instructions   Instruction[]
  ingredients    RecipeIngredient[]
  ratings        Rating[]
  shoppingList   ShoppingListIngredient[]
  visitedBy      UserVisitedRecipe[]
  tags           RecipeTag[]
  flags          RecipeFlag[]
  CookbookRecipe CookbookRecipe[]

  /// Indexes
  @@index([authorId])
  @@index([displayId])
  @@index([language])
  @@index([title])
  @@index([rating])
  @@index([time])
  @@index([createdAt])
  @@index([rating, time], name: "idx_recipes_rating_time")
  @@map("recipes")
}

model Instruction {
  recipeId Int    @map("recipe_id")
  step     Int
  text     String @db.Text

  /// Relations
  recipe Recipe @relation(fields: [recipeId], references: [id])

  /// Composite primary key
  @@id([recipeId, step])
  @@index([recipeId])
  @@index([step])
  @@map("instructions")
}

model Ingredient {
  id       Int    @id @default(autoincrement())
  language String @db.VarChar(2)
  name     String @db.VarChar(50)

  /// Relations
  recipes       RecipeIngredient[]
  shoppingLists ShoppingListIngredient[]

  /// Unique constraint
  @@unique([language, name], name: "unique_ingredient_language_name")
  /// Indexes
  @@index([language])
  @@index([name])
  @@map("ingredients")
}

model RecipeIngredient {
  id              Int     @id @default(autoincrement())
  recipeId        Int     @map("recipe_id")
  ingredientId    Int     @map("ingredient_id")
  quantity        String? @db.VarChar(256)
  category        String? @db.VarChar(100)
  categoryOrder   Int?    @map("category_order")
  ingredientOrder Int     @map("ingredient_order")

  /// Relations
  recipe     Recipe     @relation(fields: [recipeId], references: [id])
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])

  /// Constraints
  @@index([recipeId])
  @@index([ingredientId])
  @@index([recipeId, ingredientId])
  @@index([recipeId, category])
  @@index([recipeId, categoryOrder])
  @@map("recipes_ingredients")
}

model ShoppingListIngredient {
  userId          Int     @map("user_id")
  recipeId        Int     @map("recipe_id")
  ingredientId    Int     @map("ingredient_id")
  quantity        String? @db.VarChar(256)
  marked          Boolean @default(false)
  ingredientOrder Int     @map("ingredient_order")

  /// Relations
  user       User       @relation(fields: [userId], references: [id])
  recipe     Recipe     @relation(fields: [recipeId], references: [id])
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])

  /// Composite primary key
  @@id([userId, ingredientId, recipeId])
  @@index([userId, recipeId])
  @@index([userId])
  @@index([ingredientId])
  @@map("shopping_list_ingredients")
}

model Rating {
  id        Int      @id @default(autoincrement())
  recipeId  Int      @map("recipe_id")
  userId    Int      @map("user_id")
  rating    Decimal  @db.Decimal(2, 1)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamp(3)

  /// Relations
  recipe Recipe @relation(fields: [recipeId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  /// Unique constraint
  @@unique([recipeId, userId], name: "unique_recipe_user")
  @@index([recipeId])
  @@index([userId])
  @@map("ratings")
}

model UserVisitedRecipe {
  userId    Int      @map("user_id")
  recipeId  Int      @map("recipe_id")
  visitedAt DateTime @default(now()) @map("visited_at") @db.Timestamp(3)

  /// Relations
  user   User   @relation(fields: [userId], references: [id])
  recipe Recipe @relation(fields: [recipeId], references: [id])

  /// Unique constraint to prevent duplicate visits (can be updated with new timestamp)
  @@unique([userId, recipeId], name: "unique_user_recipe_visit")
  @@index([userId, visitedAt])
  @@index([userId])
  @@index([recipeId])
  @@map("user_visited_recipes")
}

model RecipeFlag {
  id         Int       @id @default(autoincrement())
  userId     Int       @map("user_id")
  recipeId   Int       @map("recipe_id")
  reason     String    @db.VarChar(255)
  resolved   Boolean   @default(false)
  active     Boolean   @default(true)
  resolvedAt DateTime? @map("resolved_at") @db.Timestamp(3)
  createdAt  DateTime  @default(now()) @map("created_at") @db.Timestamp(3)

  /// Relations
  user   User   @relation(fields: [userId], references: [id])
  recipe Recipe @relation(fields: [recipeId], references: [id])

  /// Indexes
  @@index([userId])
  @@index([recipeId])
  @@map("recipe_flags")
}

model TagCategory {
  id   Int    @id @default(autoincrement())
  name String @unique @db.VarChar(50)

  /// Relations
  tags Tag[]

  /// Indexes
  @@index([name])
  @@map("tag_categories")
}

model Tag {
  id         Int    @id @default(autoincrement())
  slug       String @unique @db.VarChar(50)
  categoryId Int    @map("category_id")

  /// Relations
  category     TagCategory      @relation(fields: [categoryId], references: [id])
  recipes      RecipeTag[]
  translations TagTranslation[]

  /// Indexes
  @@index([categoryId])
  @@index([slug])
  @@map("tags")
}

model RecipeTag {
  recipeId Int @map("recipe_id")
  tagId    Int @map("tag_id")

  /// Relations
  recipe Recipe @relation(fields: [recipeId], references: [id])
  tag    Tag    @relation(fields: [tagId], references: [id])

  /// Composite primary key
  @@id([recipeId, tagId])
  @@index([tagId])
  @@map("recipes_tags")
}

model TagTranslation {
  tagId    Int    @map("tag_id")
  language String @db.VarChar(2)
  name     String @db.VarChar(50)

  /// Relations
  tag Tag @relation(fields: [tagId], references: [id])

  /// Composite primary key
  @@id([tagId, language])
  @@index([language])
  @@map("tag_translations")
}

model Cookbook {
  id            Int                @id @default(autoincrement())
  displayId     String             @unique @map("display_id") @db.VarChar(36)
  ownerId       Int                @map("owner_id")
  title         String             @db.VarChar(255)
  description   String?            @db.Text
  language      String             @default("cs") @db.VarChar(2)
  coverImageUrl String?            @map("cover_image_url") @db.VarChar(255)
  visibility    CookbookVisibility @default(PRIVATE)
  ownerOrder    Int?               @map("owner_order")
  createdAt     DateTime           @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt     DateTime           @updatedAt @map("updated_at") @db.Timestamp(3)

  /// Relations
  owner     User               @relation(fields: [ownerId], references: [id])
  recipes   CookbookRecipe[]
  bookmarks CookbookBookmark[]

  @@unique([ownerId, ownerOrder])
  /// Indexes
  @@index([ownerId])
  @@index([title])
  @@index([visibility])
  @@map("cookbooks")
}

model CookbookRecipe {
  cookbookId  Int      @map("cookbook_id")
  recipeId    Int      @map("recipe_id")
  recipeOrder Int      @map("recipe_order")
  addedAt     DateTime @default(now()) @map("added_at") @db.Timestamp(3)

  /// Relations
  cookbook Cookbook @relation(fields: [cookbookId], references: [id])
  recipe   Recipe   @relation(fields: [recipeId], references: [id])

  /// Composite primary key
  @@id([cookbookId, recipeId])
  /// Unique order within a cookbook
  @@unique([cookbookId, recipeOrder])
  /// Indexes
  @@index([recipeId])
  @@map("cookbooks_recipes")
}

model CookbookBookmark {
  userId        Int      @map("user_id")
  cookbookId    Int      @map("cookbook_id")
  bookmarkOrder Int      @map("bookmark_order")
  addedAt       DateTime @default(now()) @map("added_at") @db.Timestamp(3)

  /// Relations
  user     User     @relation(fields: [userId], references: [id])
  cookbook Cookbook @relation(fields: [cookbookId], references: [id])

  /// Constraints
  @@id([userId, cookbookId])
  @@unique([userId, bookmarkOrder])
  @@index([cookbookId])
  @@map("cookbook_bookmarks")
}
