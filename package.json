{
    "name": "cookhound",
    "version": "1.0.7",
    "type": "module",
    "private": true,
    "workspaces": [
        "libs/*"
    ],
    "scripts": {
        "dev": "next dev",
        "build": "next build --webpack && npm run copy-static",
        "copy-static": "node scripts/copy-standalone.js",
        "start": "node .next/standalone/server.js",
        "dev-worker": "tsx src/server/queues/worker.ts",
        "prepare": "husky",
        "test": "vitest run",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "lint": "prettier --write . && eslint",
        "migrate": "npx prisma migrate dev --name init",
        "generate": "npx prisma generate --sql",
        "setup-typesense": "node scripts/setup-typesense-keys.js",
        "seed": "npx prisma db seed",
        "redis:flush": "node scripts/flush-redis.js"
    },
    "dependencies": {
        "@babel/runtime": "^7.28.6",
        "@prisma/adapter-pg": "^7.3.0",
        "@prisma/client": "^7.3.0",
        "@tanstack/react-query": "^5.90.20",
        "argon2": "^0.44.0",
        "bullmq": "^5.67.3",
        "class-transformer": "^0.5.1",
        "cookie": "^1.1.1",
        "dotenv": "^17.2.4",
        "framer-motion": "^12.33.0",
        "ioredis": "^5.9.2",
        "next": "16.1.6",
        "next-themes": "^0.4.6",
        "openai": "^6.18.0",
        "pg": "^8.18.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-easy-sort": "^1.8.0",
        "react-image-crop": "^11.0.10",
        "reflect-metadata": "^0.2.2",
        "typesense": "^2.1.0",
        "uuid": "^13.0.0",
        "winston": "^3.19.0",
        "winston-daily-rotate-file": "^5.0.0",
        "zod": "^4.3.6",
        "zustand": "^5.0.11"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@playwright/test": "^1.58.1",
        "@svgr/webpack": "^8.1.0",
        "@tailwindcss/postcss": "^4.1.18",
        "@types/argon2": "^0.15.4",
        "@types/cookie": "^1.0.0",
        "@types/jsonwebtoken": "^9",
        "@types/node": "^22.9.0",
        "@types/pg": "^8.16.0",
        "@types/react": "^19.2.13",
        "@types/react-dom": "^19.2.3",
        "@types/uuid": "^11.0.0",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "critters": "^0.0.25",
        "eslint": "^9.39.2",
        "eslint-config-next": "^16.1.6",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-cookhound": "workspace:^",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "globals": "^17.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "postcss": "^8.5.6",
        "prettier": "^3.8.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "prisma": "^7.3.0",
        "tailwindcss": "^4.1.18",
        "tsx": "^4.21.0",
        "typescript": "5.9.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^2.1.1"
    },
    "browserslist": [
        "defaults and fully supports es6-module",
        "maintained node versions"
    ],
    "packageManager": "yarn@4.1.0"
}
