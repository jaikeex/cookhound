{
    "name": "cookhound",
    "version": "1.0.2",
    "type": "module",
    "private": true,
    "workspaces": [
        "libs/*"
    ],
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build && npm run copy-static",
        "copy-static": "node scripts/copy-standalone.js",
        "start": "node .next/standalone/server.js",
        "dev-worker": "tsx src/server/queues/worker.ts",
        "prepare": "husky",
        "test": "vitest run",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "lint": "prettier --write . && eslint . --fix",
        "migrate": "npx prisma migrate dev --name init",
        "generate": "npx prisma generate --sql",
        "setup-typesense": "node scripts/setup-typesense-keys.js",
        "seed": "npx prisma db seed",
        "redis:flush": "node scripts/flush-redis.js"
    },
    "dependencies": {
        "@babel/runtime": "^7.28.4",
        "@prisma/client": "^6.17.1",
        "@tanstack/react-query": "^5.90.2",
        "argon2": "^0.44.0",
        "bullmq": "^5.61.0",
        "class-transformer": "^0.5.1",
        "cookie": "^1.0.2",
        "dotenv": "^17.2.3",
        "framer-motion": "^12.23.24",
        "ioredis": "^5.8.1",
        "next": "15.5.5",
        "next-themes": "^0.4.6",
        "openai": "^5.21.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-easy-sort": "^1.8.0",
        "react-image-crop": "^11.0.10",
        "reflect-metadata": "^0.2.2",
        "typesense": "^2.1.0",
        "uuid": "^13.0.0",
        "winston": "^3.18.3",
        "winston-daily-rotate-file": "^5.0.0",
        "zod": "^4.1.12",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "@playwright/test": "^1.56.0",
        "@svgr/webpack": "^8.1.0",
        "@types/argon2": "^0.15.4",
        "@types/cookie": "^1.0.0",
        "@types/jsonwebtoken": "^9",
        "@types/node": "^22.6.1",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.1",
        "@types/uuid": "^10",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.7.1",
        "autoprefixer": "^10.4.21",
        "critters": "^0.0.25",
        "eslint": "^8",
        "eslint-config-next": "14.2.13",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-cookhound": "workspace:^",
        "eslint-plugin-react": "^7.36.1",
        "eslint-plugin-storybook": "^0.8.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "prisma": "^6.17.1",
        "tailwindcss": "^3.4.17",
        "tsx": "^4.20.6",
        "typescript": "5.9.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^2.1.1"
    },
    "prisma": {
        "schema": "src/server/db/schema.prisma",
        "seed": "tsx prisma/seed.ts"
    },
    "browserslist": [
        "defaults and fully supports es6-module",
        "maintained node versions"
    ],
    "packageManager": "yarn@4.1.0"
}
